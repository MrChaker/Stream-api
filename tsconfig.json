{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                               
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,    
    "strict": true,                                   
    "skipLibCheck": true  ,
    "outDir": "build", 
    "declaration": true ,
    "typeRoots": [
      "./@types",
      "./node_modules/@types",
    ],
    "resolveJsonModule": true
  }
}
